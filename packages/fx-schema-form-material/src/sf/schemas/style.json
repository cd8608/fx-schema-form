{
    "type": "object",
    "$id": "style",
    "required": ["textAlign", "width", "height"],
    "properties": {
        "width": {
            "$ref": "size#/properties/width"
        },
        "height": {
            "$ref": "size#/properties/height"
        },
        "fontSize": {
            "type": "number",
            "title": "字号"
        },
        "url": {
            "type": "string",
            "format": "url"
        },
        "date": {
            "type": "string",
            "format": "date",
            "description": "日期类型测试"
        },
        "time": {
            "type": "string",
            "format": "time",
            "description": "日期类型测试"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "textAlign": {
            "type": "string",
            "enum": ["left", "right", "center"],
            "description": "Note: 只能是left，right，center中的一个。"
        },
        "aaa": {
            "type": "array",
            "title": "测试checkbox group",
            "items": {
                "title": "测试Object",
                "type": "object",
                "properties": {
                    "a": {
                        "type": "string"
                    },
                    "b": {
                        "type": "number"
                    },
                    "c": {
                        "type": "boolean"
                    }
                }
            }
        },
        "ids": {
            "type": "array",
            "title": "测试数组",
            "maxItems": 4,
            "minItems": 3,
            "description": "拖动元素试试",
            "items": {
                "title": "测试ID",
                "type": "string",
                "format": "uuid"
            }
        },
        "checked": {
            "type": "boolean",
            "title": "是否同意协议"
        }
    }
}